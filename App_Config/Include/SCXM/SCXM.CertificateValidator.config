<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <scxm>
      <certificateChecker type="SCXM.CertificateValidator.Configurations.CertificateConfigurator, SCXM.CertificateValidator">
        <certificates hint="list:AddCertificates">
          <certificate name="" thumbprint=""/>
          <certificate name="" thumbprint=""/>
          <certificate name="" thumbprint=""/>
        </certificates>
      </certificateChecker>
    </scxm>
    <api>
      <services>
        <configuration type="Sitecore.Services.Infrastructure.Configuration.ServicesConfiguration, Sitecore.Services.Infrastructure">
          <allowedControllers hint="list:AddController">
            <allowedController desc="CertificateCheckerController">SCXM.CertificateValidator.Controllers.CertificateCheckerController, SCXM.CertificateValidator</allowedController>
          </allowedControllers>
        </configuration>
      </services>
    </api>
  </sitecore>
</configuration>